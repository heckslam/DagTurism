<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_title">
        <CheckBoxPreference
            android:title="@string/enableSplash"
            android:key="splashEnabled"
            android:defaultValue="true"
            android:summaryOn="Включена"
            android:summaryOff="Выключена"/>

        <CheckBoxPreference
            android:title="@string/enableAnimation"
            android:key="animationEnabled"
            android:defaultValue="true"
            android:summaryOn="Включена"
            android:summaryOff="Выключена"/>

        <ListPreference
            android:title="@string/select_theme"
            android:key="selectedTheme"
            android:defaultValue="1"
            android:entries="@array/entries"
            android:entryValues="@array/entries_value"
            />
    </PreferenceCategory>


</PreferenceScreen>